# Environment Configuration for Production
DEBUG=False
APP_NAME=FastAPI Async Application
APP_VERSION=1.0.0

# Database URL (Render will provide this automatically)
# Format: postgresql+asyncpg://username:password@hostname:port/database_name
DATABASE_URL=your_render_database_url_here

# Security (Generate a secure secret key)
SECRET_KEY=your-very-secure-secret-key-minimum-32-characters-long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Origins (Add your frontend domain)
BACKEND_CORS_ORIGINS=["https://your-frontend-domain.com"]


# Production simulation:
#  gunicorn main:app -k uvicorn.workers.UvicornWorker --bind 0.0.0.0:8000